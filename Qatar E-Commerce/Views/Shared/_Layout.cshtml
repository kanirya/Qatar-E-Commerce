                                            <option value="manual">Manual</option>
                                            <option value="cvt">CVT</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-primary w-100">Find Parts</button>
                                </div>
                            </form>
