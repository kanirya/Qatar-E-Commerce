                                {
                                    <div class="dropdown-user-info">
                                        <div class="dropdown-user-avatar">
                                            <i class="fas fa-user-circle"></i>
                                        </div>
                                        <div class="dropdown-user-details">
                                            <h6>@User.Identity.Name</h6>
                                            <p>Customer</p>
                                        </div>
                                    </div>
                                    <div class="dropdown-divider"></div>
