<style>
    /* Home Page Styles */
    .home-page {
        padding-bottom: 3rem;
    }

    /* Hero Section */
    .hero-section {
        background: linear-gradient(135deg, var(--primary-lighter), var(--primary-light));
        padding: 4rem 0;
        margin-bottom: 3rem;
        border-radius: var(--radius);
    }

    .hero-content h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color: var(--primary-dark);
    }

    .hero-content p {
        font-size: 1.1rem;
        margin-bottom: 1.5rem;
        color: var(--gray-dark);
    }

    .hero-search {
        background-color: var(--white);
        padding: 1.5rem;
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        margin-bottom: 1.5rem;
    }

    .hero-features {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .feature-item {
        display: flex;
        align-items: center;
        background-color: var(--white);
        padding: 0.5rem 1rem;
        border-radius: var(--radius-sm);
        box-shadow: var(--shadow-sm);
    }

        .feature-item i {
            color: var(--primary-color);
            margin-right: 0.5rem;
            font-size: 1rem;
        }

        .feature-item span {
            font-size: 0.85rem;
            font-weight: 500;
        }

    .hero-image {
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .hero-image img {
            max-width: 100%;
            border-radius: var(--radius);
            box-shadow: var(--shadow);
        }

    /* Section Styles */
    .section-header {
        text-align: center;
        margin-bottom: 2.5rem;
    }

        .section-header h2 {
            font-size: 2rem;
            color: var(--primary-color);
            margin-bottom: 0.5rem;
        }

        .section-header p {
            font-size: 1rem;
            color: var(--gray);
        }

    /* Popular Categories */
    .popular-categories {
        margin-bottom: 3rem;
    }

    .category-grid {
